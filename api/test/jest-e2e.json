{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["<rootDir>/../src/test-setup.ts"],
  "testTimeout": 10000,
  "moduleNameMapper": {
    "^@root/(.*)$": "<rootDir>/../src/$1"
  }
}
